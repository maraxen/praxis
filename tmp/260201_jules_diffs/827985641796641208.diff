+import { test, expect, gotoWithWorkerDb } from '../fixtures/worker-db.fixture';
+import { WelcomePage } from '../page-objects/welcome.page';
+
+const PROTOCOLS_TO_TEST = [
+  { name: 'Hello World Printer' },
+];
+
+test.describe('@slow Protocol Simulation Matrix', () => {
+  for (const protocol of PROTOCOLS_TO_TEST) {
+    test(`runs ${protocol.name} to completion`, async ({ page }, testInfo) => {
+      await gotoWithWorkerDb(page, '/', testInfo, { resetdb: true });
+      const welcomePage = new WelcomePage(page);
+      await welcomePage.handleSplashScreen();
+
+      // Seed the protocol directly into the database
+      await page.evaluate(async (protocolName) => {
+        const repos = await (window as any).sqliteService.getAsyncRepositories().toPromise();
+        await repos.protocolDefinitions.create({
+          accession_id: 'hello-world-printer-id',
+          name: protocolName,
+          fqn: 'praxis.protocols.hello_world.hello_world',
+        });
+      }, protocol.name);
+
+
+      await page.goto('/app/run');
+
+      // After seeding, the page needs to be reloaded for Angular to pick up the new data
+      await page.reload();
+
+      // Locate the protocol card by its name for robustness
+      await page.locator('[data-testid="protocol-card"]', { hasText: protocol.name }).click();
+
+      await page.getByTestId('machine-card-simulated').click();
+
+      await page.getByRole('button', { name: 'Continue' }).click();
+      await page.getByRole('button', { name: 'Continue' }).click();
+
+      await page.getByRole('button', { name: 'Start Run' }).click();
+
+      await expect(page.locator('[data-testid="run-status"]'))
+        .toContainText('Completed', { timeout: 120000 });
+    });
+  }
+});
