+
+import { test, expect } from '../fixtures/worker-db.fixture';
+import { RunProtocolPage } from '../page-objects/run-protocol.page';
+import { WelcomePage } from '../page-objects/welcome.page';
+import { MonitorPage } from '../page-objects/monitor.page';
+import { gotoWithWorkerDb } from '../fixtures/worker-db.fixture';
+
+const PROTOCOLS_TO_TEST = [
+  'Selective Transfer',
+  'Kinetic Assay',
+  'Plate Preparation',
+  'Serial Dilution',
+  'Plate Reader Assay',
+  'Simple Transfer',
+];
+
+test.describe.configure({ mode: 'serial' });
+test.describe('@slow Protocol Simulation Matrix', () => {
+  for (const protocolName of PROTOCOLS_TO_TEST) {
+    test(`runs ${protocolName} to completion`, async ({ page }, testInfo) => {
+      test.setTimeout(180000); // 3-minute timeout for each protocol run
+
+      await gotoWithWorkerDb(page, '/app/run', testInfo, { resetdb: true });
+      await page.waitForLoadState('networkidle');
+
+      const welcomePage = new WelcomePage(page);
+      await welcomePage.handleSplashScreen();
+      await welcomePage.verifyDashboardLoaded();
+
+      const runPage = new RunProtocolPage(page);
+      await page.waitForSelector('.protocol-card');
+      await page.locator('.protocol-card', { hasText: protocolName }).click();
+
+      for (let i = 0; i < 4; i++) {
+        if (await runPage.startExecutionButton.isVisible({ timeout: 1000 })) {
+          break;
+        }
+
+        if (await runPage.machineSelection.isVisible({ timeout: 1000 })) {
+          await runPage.selectFirstMachine();
+        }
+
+        if (await runPage.continueButton.isEnabled()) {
+          await runPage.advanceStep();
+        } else {
+          break;
+        }
+      }
+
+      await runPage.startExecution();
+
+      const monitorPage = new MonitorPage(page);
+      await monitorPage.waitForRunCompletion();
+
+      const finalStatus = await monitorPage.getRunStatus();
+      expect(finalStatus).toContain('Completed');
+    });
+  }
+});
